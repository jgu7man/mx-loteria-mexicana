rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isRoomManager(roomData) {
      return isAuthenticated() && request.auth.uid == roomData.managerId;
    }
    
    // Rooms collection
    match /rooms/{roomId} {
      // Anyone authenticated can read rooms
      allow read: if isAuthenticated();
      
      // Only authenticated users can create rooms (they become the manager)
      allow create: if isAuthenticated() 
                    && request.resource.data.managerId == request.auth.uid;
      
      // Only the room manager can update their room
      allow update: if isRoomManager(resource.data);
      
      // Only the room manager can delete their room
      allow delete: if isRoomManager(resource.data);
    }
    
    // Participants subcollection
    match /participants/{roomId}/list/{participantId} {
      // Anyone authenticated can read participants
      allow read: if isAuthenticated();
      
      // Users can create their own participant entry when joining
      allow create: if isAuthenticated() 
                    && request.resource.data.uid == request.auth.uid;
      
      // Users can update their own participant data
      // OR the room manager can update any participant
      allow update: if isAuthenticated() 
                    && (request.resource.data.uid == request.auth.uid
                        || exists(/databases/$(database)/documents/rooms/$(roomId))
                        && get(/databases/$(database)/documents/rooms/$(roomId)).data.managerId == request.auth.uid);
      
      // Only the room manager can delete participants
      allow delete: if isAuthenticated()
                    && exists(/databases/$(database)/documents/rooms/$(roomId))
                    && get(/databases/$(database)/documents/rooms/$(roomId)).data.managerId == request.auth.uid;
    }
    
    // Deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}